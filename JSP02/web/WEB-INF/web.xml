<?xml version="1.0" encoding="UTF-8"?>

<web-app
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
        version="4.0">

    <listener>
        <listener-class>utils.ConfigListener</listener-class>
    </listener>
    <context-param>
        <param-name>dbConnectionStr</param-name>
        <param-value>jdbc:mysql://localhost:3306/javaweb|root|123456</param-value>
    </context-param>
    <filter>
        <filter-name>TestFilter1</filter-name>
        <filter-class>util.TestFilter1</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TestFilter1</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
